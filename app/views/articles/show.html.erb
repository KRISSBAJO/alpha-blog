<!-- app/views/articles/show.html.erb -->

<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Article Details</h1>
      <h4 class="mt-4"><strong>Title:</strong> <%= @article.title %></h4>
      <p class="card-text"><strong>Description:</strong> <%= @article.description %></p>
      <div class="mt-4">
        <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to 'Back to Articles', articles_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
