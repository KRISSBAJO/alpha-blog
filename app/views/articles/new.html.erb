<div class="container mt-4">
  <h1 class="mb-4 text-center" style="font-size: 2rem; color: #007bff;">Create a New Article</h1>

  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2 style="font-size: 1.5rem;"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @article, local: true, data: { turbo: false }) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", style: "border-radius: 5px; border: 1px solid #ced4da;" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", style: "border-radius: 5px; border: 1px solid #ced4da;" %>
    </div>

    <div class="text-center">
      <%= form.submit "Create Article", class: "btn btn-primary", style: "background-color: #007bff; border: none; padding: 10px 20px; font-size: 1.1rem;" %>
    </div>
  <% end %>
</div>
